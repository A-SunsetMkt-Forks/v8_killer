{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "V8 Killer Configure Schema",
  "type": "object",
  "definitions": {
    "Rule": {
      "title": "Rule",
      "type": "object",
      "properties": {
        "matcher": {
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "resource-name-keyword"
              ]
            }
          },
          "oneOf": [
            {
              "title": "ResourceNameKeyword Matcher",
              "properties": {
                "type": {
                  "const": "resource-name-keyword"
                },
                "keyword": {
                  "type": "string"
                }
              },
              "type": "object",
              "required": [
                "type",
                "keyword"
              ]
            }
          ],
          "required": [
            "type"
          ]
        },
        "processors": {
          "type": "array",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "resource-name-keyword"
              ]
            }
          },
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "insert-before",
                  "insert-after"
                ]
              }
            },
            "oneOf": [
              {
                "title": "InsertBefore Processor",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "insert-before"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              },
              {
                "title": "InsertAfter Processor",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "insert-after"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              }
            ],
            "required": [
              "type"
            ]
          }
        }
      }
    }
  },
  "properties": {
    "rules": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "$ref": "#/definitions/Rule"
      }
    }
  },
  "required": [
    "rules"
  ]
}